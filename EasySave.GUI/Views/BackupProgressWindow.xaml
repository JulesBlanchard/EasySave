<Window x:Class="EasySave.GUI.Views.BackupProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:EasySave.Models;assembly=EasySave"
        Title="Suivi des sauvegardes" Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow">
  <Grid Margin="10">
    <ListView ItemsSource="{Binding RunningBackups}">
  <ListView.ItemTemplate>
    <DataTemplate>
      <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="5">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>

          <!-- Nom de la sauvegarde -->
          <TextBlock Text="{Binding Name}"
                     FontWeight="Bold" VerticalAlignment="Center" Grid.Column="0"/>

          <!-- Progression -->
          <StackPanel Grid.Column="1" Orientation="Vertical">
            <ProgressBar Height="20" 
                         Value="{Binding Progression}" 
                         Maximum="100" 
                         Foreground="HotPink" 
                         Margin="5,0"
                         HorizontalAlignment="Stretch"
                         Width="300"/>

            <TextBlock Text="{Binding Progression, StringFormat={}{0}%}" FontSize="12"/>
          </StackPanel>

          <!-- Bouton Pause -->
          <Button Content="Pause" Grid.Column="2" Margin="5"
                  Command="{Binding DataContext.PauseCommand,
                            RelativeSource={RelativeSource AncestorType=Window}}"
                  CommandParameter="{Binding}">
            <Button.Style>
              <Style TargetType="Button">
                <!-- Par défaut, désactivé -->
                <Setter Property="IsEnabled" Value="False"/>
                <Style.Triggers>
                  <!-- Si Status == Active, on active le bouton Pause -->
                  <DataTrigger Binding="{Binding Status}" Value="{x:Static models:BackupStatus.Active}">
                    <Setter Property="IsEnabled" Value="True"/>
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Button.Style>
          </Button>

          <!-- Bouton Resume -->
          <Button Content="Resume" Grid.Column="3" Margin="5"
                  Command="{Binding DataContext.ResumeCommand,
                            RelativeSource={RelativeSource AncestorType=Window}}"
                  CommandParameter="{Binding}">
            <Button.Style>
              <Style TargetType="Button">
                <!-- Par défaut, désactivé -->
                <Setter Property="IsEnabled" Value="False"/>
                <Style.Triggers>
                  <!-- Si Status == Paused, on active le bouton Resume -->
                  <DataTrigger Binding="{Binding Status}" Value="{x:Static models:BackupStatus.Paused}">
                    <Setter Property="IsEnabled" Value="True"/>
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Button.Style>
          </Button>

          <!-- Bouton Stop -->
          <Button Content="Stop" Grid.Column="4" Margin="5"
                  Command="{Binding DataContext.StopCommand,
                            RelativeSource={RelativeSource AncestorType=Window}}"
                  CommandParameter="{Binding}">
            <Button.Style>
              <Style TargetType="Button">
                <!-- Par défaut, désactivé -->
                <Setter Property="IsEnabled" Value="False"/>
                <Style.Triggers>
                  <!-- Activer Stop si Status == Active ou Paused -->
                  <DataTrigger Binding="{Binding Status}" Value="{x:Static models:BackupStatus.Active}">
                    <Setter Property="IsEnabled" Value="True"/>
                  </DataTrigger>
                  <DataTrigger Binding="{Binding Status}" Value="{x:Static models:BackupStatus.Paused}">
                    <Setter Property="IsEnabled" Value="True"/>
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Button.Style>
          </Button>

        </Grid>
      </Border>
    </DataTemplate>
  </ListView.ItemTemplate>
</ListView>

  </Grid>
</Window>
