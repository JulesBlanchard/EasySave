<Window x:Class="EasySave.GUI.Views.LanguageSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource LanguageSelectionWindow_Title}" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{DynamicResource LanguageSelection_Text}" 
                       FontSize="22" Margin="0,0,0,20" 
                       HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="{DynamicResource LanguageSelection_French}" Width="120" Height="40" Margin="10" 
                        Command="{Binding SelectFrenchCommand}" />
                <Button Content="{DynamicResource LanguageSelection_English}" Width="120" Height="40" Margin="10" 
                        Command="{Binding SelectEnglishCommand}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>