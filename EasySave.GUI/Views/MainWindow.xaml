<Window x:Class="EasySave.GUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave.GUI.Views"
        mc:Ignorable="d"
        Title="EasySave" Height="500" Width="900">
    <DockPanel>
        <!-- Top menu -->
        <Menu DockPanel.Dock="Top" Background="LightGray" Height="30">
            <MenuItem Header="File">
                <MenuItem Header="Settings" Command="{Binding OpenSettingsCommand}" />
                <Separator/>
                <MenuItem Header="Exit" Command="{Binding ExitCommand}" />
            </MenuItem>
        </Menu>
        <!-- Toolbar with buttons -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Create Backup" Command="{Binding OpenCreateBackupCommand}" Margin="5"/>
            <Button Content="Execute Backup" Command="{Binding ExecuteBackupCommand}" Margin="5" />
            <Button Content="Delete Backup" Command="{Binding DeleteBackupCommand}" Margin="5" />
            <Button Content="Execute All Backups" Command="{Binding ExecuteAllBackupsCommand}" Margin="5"/>
        </StackPanel>
        <!-- DataGrid for listing backups -->
        <DataGrid x:Name="BackupsDataGrid" ItemsSource="{Binding Backups}" AutoGenerateColumns="False" 
                  Margin="10" IsReadOnly="True" SelectionMode="Single" SelectedItem="{Binding SelectedBackup}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Type" Binding="{Binding BackupType}" Width="100"/>
                <DataGridTextColumn Header="Source" Binding="{Binding SourcePath}" Width="*"/>
                <DataGridTextColumn Header="Target" Binding="{Binding TargetPath}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <!-- Bottom StatusBar -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="{Binding CurrentStatus}" />
        </StatusBar>
    </DockPanel>
</Window>
