<Window x:Class="EasySave.GUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasySave" Height="500" Width="900">
    <DockPanel Margin="10">
        <!-- Menu -->
        <Menu DockPanel.Dock="Top" Background="LightGray" Height="30">
            <MenuItem Header="File">
                <MenuItem Header="Settings" Command="{Binding OpenSettingsCommand}" />
                <Separator/>
                <MenuItem Header="Exit" Command="{Binding ExitCommand}" />
            </MenuItem>
        </Menu>
        <!-- Toolbar -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Create Backup" Command="{Binding OpenCreateBackupCommand}" />
            <!-- (Optionnel) Un bouton pour rafraîchir la liste -->
            <Button Content="List Backups" Command="{Binding ListBackupsCommand}" />
            <Button Content="Execute Backup" Command="{Binding ExecuteBackupCommand}" 
                    IsEnabled="{Binding SelectedBackup, Converter={StaticResource NullToBoolConverter}}"/>
            <Button Content="Delete Backup" Command="{Binding DeleteBackupCommand}" 
                    IsEnabled="{Binding SelectedBackup, Converter={StaticResource NullToBoolConverter}}"/>
            <Button Content="Execute All Backups" Command="{Binding ExecuteAllBackupsCommand}" />
            <Button Content="Configure Business Software" Command="{Binding OpenSettingsCommand}" />
            <Button Content="Quit" Command="{Binding ExitCommand}" />
        </StackPanel>
        <!-- DataGrid pour afficher la liste des backups -->
        <DataGrid ItemsSource="{Binding Backups}" AutoGenerateColumns="False" Margin="10" IsReadOnly="True"
                  SelectionMode="Single" SelectedItem="{Binding SelectedBackup}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Type" Binding="{Binding BackupType}" Width="100"/>
                <DataGridTextColumn Header="Source" Binding="{Binding SourcePath}" Width="*"/>
                <DataGridTextColumn Header="Target" Binding="{Binding TargetPath}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <!-- StatusBar -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="{Binding CurrentStatus}" />
        </StatusBar>
    </DockPanel>
</Window>
