<Window x:Class="EasySave.GUI.Views.CreateBackupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource CreateBackupWindow_Title}" Height="300" Width="500">
    <Grid Margin="10">
        <!-- Trois colonnes -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nom de la sauvegarde -->
        <Label Grid.Row="0" Grid.Column="0" Content="{DynamicResource CreateBackup_BackupNameLabel}" Margin="5"/>
        <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding BackupName, Mode=TwoWay}" Margin="5"/>

        <!-- Dossier source avec bouton -->
        <Label Grid.Row="1" Grid.Column="0" Content="{DynamicResource CreateBackup_SourcePathLabel}" Margin="5"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SourcePath, Mode=TwoWay}" Margin="5"/>
        <Button Grid.Row="1" Grid.Column="2" Content="{DynamicResource CreateBackup_BrowseButton}" Command="{Binding BrowseSourceCommand}" Margin="5"/>

        <!-- Dossier cible avec bouton -->
        <Label Grid.Row="2" Grid.Column="0" Content="{DynamicResource CreateBackup_TargetPathLabel}" Margin="5"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TargetPath, Mode=TwoWay}" Margin="5"/>
        <Button Grid.Row="2" Grid.Column="2" Content="{DynamicResource CreateBackup_BrowseButton}" Command="{Binding BrowseTargetCommand}" Margin="5"/>

        <!-- Type de sauvegarde -->
        <Label Grid.Row="3" Grid.Column="0" Content="{DynamicResource CreateBackup_BackupTypeLabel}" Margin="5"/>
        <ComboBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" 
                  SelectedValue="{Binding BackupType, Mode=TwoWay}" 
                  SelectedValuePath="Content" Margin="5">
            <ComboBoxItem Content="full" />
            <ComboBoxItem Content="diff" />
        </ComboBox>

        <!-- Boutons Create et Cancel -->
        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="{DynamicResource CreateBackup_CreateButton}" Command="{Binding CreateBackupCommand}" Width="80" Margin="5"/>
            <Button Content="{DynamicResource CreateBackup_CancelButton}" Command="{Binding CancelCommand}" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
